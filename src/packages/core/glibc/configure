mkdir  build
cd     build

../configure                             \
      --prefix=/usr                      \
      --disable-werror                   \
      --enable-kernel=3.2                \
      --with-headers=/usr/include        \
      --libexecdir=/usr/lib              \
      libc_cv_slibdir=/usr/lib               \
      libc_cv_include_x86_isa_level=no  
