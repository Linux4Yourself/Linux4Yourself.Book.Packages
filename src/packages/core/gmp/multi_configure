ABI="32" \
CFLAGS="-m32 -O2 -pedantic -fomit-frame-pointer -mtune=generic -march=i686" \
CXXFLAGS="$CFLAGS" \
PKG_CONFIG_PATH="/usr/lib32/pkgconfig" \
./configure             \
    --prefix=/usr       \
    --disable-static    \
    --enable-cxx        \
    --libdir=/usr/lib32 \
    --includedir=/usr/include/m32/gmp